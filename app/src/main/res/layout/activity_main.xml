<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_geral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <ImageView
        android:id="@+id/ivBandeirinhas"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/altura_bandeirinha_splash"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/balao" />

    <TextView
        android:id="@+id/tvDescricaoFestaSaoJoao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fonte_texto_12sp"
        android:text="@string/descricao_festa_junina"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/margin_geral"
        android:layout_marginRight="@dimen/margin_geral"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBandeirinhas" />

    <Button
        android:id="@+id/btnBotao_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir para Produtos"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/margin_geral"
        android:layout_marginRight="@dimen/margin_geral"
        android:backgroundTint="@color/cor3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescricaoFestaSaoJoao" />

</androidx.constraintlayout.widget.ConstraintLayout>